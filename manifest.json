{
    "manifest_version": 3,
    "name": "AI Text Summarizer",
    "version": "1.0",
    "description": "Summarizes text using AI.",
    "permissions": ["activeTab"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    },
    "background": {
      "service_worker": "background.js"
    },
    "icons": {
      "48": "icon.png"
    }
  }
  